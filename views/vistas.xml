<odoo>
    <data>
        <record model="ir.ui.view" id="vista_fctpablo_alumnos_tree">
            <field name="name">vista_fctpablo_alumnos_tree</field>
            <field name="model">fctpablo.alumnos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="date_birth"/>
                    <field name="grade"/>
                    <field name="period"/>
                    <field name="dual"/>
                    <field name="erasmus"/>
                    <field name="observations"/>
                    <field name="first_year"/>
                    <field name="academic_year"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="vista_fctpablo_alumnos_search">
            <field name="name">vista_fctpablo_alumnos_search</field>
            <field name="model">fctpablo.alumnos</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="nombre"/>
                    <field name="surname" string="apellido"/>
                    <!--<field name="academic_year" string="curso"/>-->
                    <field name="empresa_id" string="empresa"/>
                </search>
            </field>
        </record>
        -
        <record model="ir.ui.view" id="vista_fctpablo_alumnos_form"> <!--Formulario de alumnos-->
            <field name="name">vista_fctpablo_alumnos_form</field>
            <field name="model">fctpablo.alumnos</field>
            <field name="arch" type="xml">
                <form string="Formulario_alumnos">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="surname"/>
                                <field name="date_birth"/>
                                <field name="photo" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                                <field name="first_year"/>
                                <field name="academic_year"/>
                                <field name="empresa_id"/>
                            </group>
                            <group name="group_right">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="grade"/>
                                <field name="period"/>
                                <field name="dual"/>
                                <field name="erasmus"/>
                                <field name="observations"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="vista_fctpablo_alumnos_kanban">
            <field name="name">vista_fctpablo_alumnos_kanban</field>
            <field name="model">fctpablo.alumnos</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="date_birth"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Cartel" t-att-src="kanban_image('fctpablo.alumnos','photo', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                    <div t-if="record.date_birth.value">
                                        <t t-esc="record.date_birth.value"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>

        </record>
        <record id="accion_fctpablo_alumnos_form" model="ir.actions.act_window"><!--Accion de alumnos-->
            <field name="name">Listado de alumnos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fctpablo.alumnos</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Alumnos
                </p>
                <p>Click <Strong>'Crear'</Strong>Para añadir nuevos alumnos
                </p>
            </field>
        </record>
        <!--Hasta aqui el formulario, la vista kanban y la vista tree de alumnos-->

        <!--Ahora empezamos con empresa, que tiene formulario y vista tree-->

        <record model="ir.ui.view" id="vista_fctpablo_empresa_tree">
            <field name="name">vista_fctpablo_empresa_tree</field>
            <field name="model">fctpablo.empresa</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="contact"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="direction"/>
                    <field name="location"/>
                    <field name="dual"/>
                    <field name="erasmus"/>
                    <field name="vacancies"/>
                    <field name="agreement"/>
                    <field name="task"/>
                    <field name="observations"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="vista_fctpablo_empresa_form">
            <field name="name">vista_fctpablo_empresa_form</field>
            <field name="model">fctpablo.empresa</field>
            <field name="arch" type="xml">
                <form string="Formulario_empresa">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="contact"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="direction"/>
                                <field name="alumnos_id">
                                    <tree>
                                        <field name="name"/>
                                        <field name="surname"/>
                                        <field name="academic_year"/>
                                        <field name="grade"/>
                                        <field name="dual"/>
                                        <field name="erasmus"/>
                                    </tree>
                                </field>
                            </group>
                            <group name="group_right">
                                <field name="location"/>
                                <field name="dual"/>
                                <field name="erasmus"/>
                                <field name="vacancies"/>
                                <field name="agreement"/>
                                <field name="task"/>
                                <field name="observations"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="accion_fctpablo_empresa_form" model="ir.actions.act_window">
            <field name="name">Listado de empresas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fctpablo.empresa</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Empresas
                </p>
                <p>Click <Strong>'Crear'</Strong>Para añadir nuevas empresas
                </p>
            </field>
        </record>
        <menuitem id="menu_fctpablo_raiz" name="fctpablo" sequence="10"/>
        <menuitem id="menu_fctpablo_listado" name="Listado de alumnos" parent="menu_fctpablo_raiz" sequence="0"/>
        <menuitem id="menu_fctpablo_alumnos" name="Consultar" parent="menu_fctpablo_listado"
                  action="accion_fctpablo_alumnos_form"/>
        <menuitem id="menu_fctpablo_listado_empresa" name="Listado de empresas" parent="menu_fctpablo_raiz"
                  sequence="1"/>
        <menuitem id="menu_fctpablo_empresa" name="Consultar" parent="menu_fctpablo_listado_empresa"
                  action="accion_fctpablo_empresa_form"/>
    </data>
</odoo>