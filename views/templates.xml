<odoo>
    <data>
        <template id="report_ficha_alumnos">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>
                                <span t-field="o.name"/>
                            </h2>
                            <p style="color: black; font-family: Verdana; font-weight: bold;">Título:
                                <span t-field="o.name"/>
                            </p>
                            <t t-if="o.photo">
                                <img t-att-src="'data:photo/png;base64,%s' % to_text(o.photo)"
                                     style="max-height:8cm; max-width:8cm;"/>
                            </t>
                            <p></p>
                            <t t-if="o.surname">
                                <p style="color: black; font-family: Verdana; font-weight: bold;">Apellido:
                                    <span t-field="o.surname"/>
                                </p>
                            </t>
                            <t t-if="o.first_year">
                                <p style="color: black; font-family: Verdana; font-weight: bold;">Año:
                                    <span t-field="o.first_year"/>
                                </p>
                            </t>
                            <t t-if="o.grade">
                                <p style="color: black; font-family: Verdana; font-weight: bold;">Resumen:
                                    <span t-field="o.grade"/>
                                </p>
                            </t>
                            <t t-if="o.empresa_id">
                                <p style="color: black; font-family: Verdana; font-weight: bold;">Empresa:
                                    <span t-field="o.empresa_id"/>
                                </p>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>
